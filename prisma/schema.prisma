generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  products Product[] //usuário pode vender produtos ou não
  @@map("users")
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  photo       String?
  variants    Variant[]
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  @@map("products")
}

model Variant {
  sku      String   @id
  size     String?
  color    String?
  price    Decimal  @default(0)
  stock    Int      @default(0)
  product  Product  @relation(fields: [productId], references: [id])
  productId Int
  @@map("variants")
}